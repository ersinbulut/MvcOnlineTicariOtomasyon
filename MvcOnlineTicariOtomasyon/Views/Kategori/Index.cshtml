@using PagedList
@model IPagedList<MvcOnlineTicariOtomasyon.Models.Siniflar.Kategori>

@{
    ViewBag.Title = "Kategori Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container mt-4">

    <!-- Üst Başlık -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">📂 Kategori Yönetimi</h3>
        <a href="@Url.Action("KategoriEkle","Kategori")" class="btn btn-primary">
            <i class="fa fa-plus"></i> Yeni Kategori
        </a>
    </div>


    <!-- 🔍 FİLTRE PANELİ -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">

            <form method="get" class="row g-3">

                <!-- Arama -->
                <div class="col-md-4">
                    <input type="text"
                           name="search"
                           value="@ViewBag.CurrentSearch"
                           class="form-control"
                           placeholder="Kategori ara..." />
                </div>

                <!-- Kategoriye Göre Filtre -->
                <div class="col-md-3">
                    <select name="kategoriId" class="form-control">
                        <option value="">Tüm Kategoriler</option>

                        @foreach (var k in ViewBag.Kategoriler as List<MvcOnlineTicariOtomasyon.Models.Siniflar.Kategori>)
                        {
                            <option value="@k.KategoriID"
                                    @(ViewBag.CurrentKategori == k.KategoriID ? "selected" : "")>
                                @k.KategoriAd
                            </option>
                        }
                    </select>
                </div>

                <!-- Sayfa Başına Gösterim -->
                <div class="col-md-3">
                    <select name="pageSize" class="form-control">
                        @{
                            int[] sizes = { 5, 10, 20, 50, 100 };
                        }
                        @foreach (var s in sizes)
                        {
                            <option value="@s" @(ViewBag.PageSize == s ? "selected" : "")>
                                @s kayıt
                            </option>
                        }
                    </select>
                </div>

                <!-- Filtrele -->
                <div class="col-md-2">
                    <button class="btn btn-primary w-100">
                        <i class="fa fa-filter"></i> Uygula
                    </button>
                </div>

            </form>

        </div>
    </div>


    <!-- 📋 TABLO -->
    <div class="card shadow-sm">
        <div class="card-body p-0">

            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 80px;">ID</th>
                        <th>Kategori Adı</th>
                        <th style="width: 120px;">Sil</th>
                        <th style="width: 120px;">Güncelle</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.KategoriID</td>
                            <td class="fw-semibold">@item.KategoriAd</td>

                            <td>
                                <a href="@Url.Action("KategoriSil","Kategori", new { id = item.KategoriID })"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Bu kategoriyi silmek istiyor musun?');">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>

                            <td>
                                <a href="@Url.Action("KategoriGetir","Kategori", new { id = item.KategoriID })"
                                   class="btn btn-sm btn-success">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>


    <!-- 🔢 SAYFALAMA -->
    <nav aria-label="Sayfalama" class="mt-3">
        <ul class="pagination justify-content-center">

            <!-- Önceki -->
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link"
                   href="@Url.Action("Index", new { page = Model.PageNumber - 1, search = ViewBag.CurrentSearch, kategoriId = ViewBag.CurrentKategori, pageSize = ViewBag.PageSize })">
                    &laquo;
                </a>
            </li>

            @{
                int maxPageLinks = 5;
                int start = Model.PageNumber - (maxPageLinks / 2);
                if (start < 1) { start = 1; }
                int end = start + maxPageLinks - 1;
                if (end > Model.PageCount)
                {
                    end = Model.PageCount;
                    start = Math.Max(1, end - maxPageLinks + 1);
                }
            }

            @for (int i = start; i <= end; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { page = i, search = ViewBag.CurrentSearch, kategoriId = ViewBag.CurrentKategori, pageSize = ViewBag.PageSize })">
                        @i
                    </a>
                </li>
            }

            <!-- Sonraki -->
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link"
                   href="@Url.Action("Index", new { page = Model.PageNumber + 1, search = ViewBag.CurrentSearch, kategoriId = ViewBag.CurrentKategori, pageSize = ViewBag.PageSize })">
                    &raquo;
                </a>
            </li>

        </ul>
    </nav>

</div>
