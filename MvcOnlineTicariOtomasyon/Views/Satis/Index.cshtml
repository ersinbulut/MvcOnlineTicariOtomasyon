@using MvcOnlineTicariOtomasyon.Models.Siniflar
@using PagedList
@model IPagedList<SatisHareket>

@{
    ViewBag.Title = "Satış Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">💰 Satış Hareketleri</h3>
        <a href="/Satis/YeniSatis" class="btn btn-primary">
            <i class="fa fa-plus"></i> Yeni Satış Yap
        </a>
    </div>

    <!-- 🔍 Filtreleme Formu -->
    <form method="get" class="row g-3 mb-3">

        <div class="col-md-4">
            <input type="text" name="urun"
                   value="@ViewBag.Urun"
                   placeholder="Ürün adı ara..."
                   class="form-control" />
        </div>

        <div class="col-md-3">
            <select name="personel" class="form-control">
                <option value="">Tüm Personeller</option>

                @{
                    var personeller = ViewBag.Personeller as List<string> ?? new List<string>();
                }

                @foreach (var p in personeller)
                {
                    <option value="@p" @(ViewBag.SelectedPersonel == p ? "selected" : "")>@p</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <select name="pageSize" class="form-control">
                @{
                    int[] sizes = { 5, 10, 20, 50, 100 };
                }
                @foreach (var s in sizes)
                {
                    <option value="@s" @(ViewBag.PageSize == s ? "selected" : "")>@s kayıt</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <button class="btn btn-primary w-100">
                <i class="fa fa-search"></i> Uygula
            </button>
        </div>
    </form>

    <!-- 📄 Satış Tablosu -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Ürün</th>
                        <th>Cari</th>
                        <th>Personel</th>
                        <th>Adet</th>
                        <th>Fiyat</th>
                        <th>Toplam</th>
                        <th>Tarih</th>
                        <th>Güncelle</th>
                        <th>Detaylar</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SatisID</td>
                            <td>@item.Urun.UrunAd</td>
                            <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
                            <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                            <td>@item.Adet</td>
                            <td>@item.Fiyat ₺</td>
                            <td>@item.ToplamTutar ₺</td>
                            <td>@item.Tarih.ToShortDateString()</td>

                            <td>
                                <a href="/Satis/SatisGetir/@item.SatisID" class="btn btn-warning btn-sm">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>

                            <td>
                                <a href="/Satis/SatisDetay/@item.SatisID" class="btn btn-danger btn-sm">
                                    <i class="fa fa-info-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

    <!-- 📌 Sayfalama -->
    <nav aria-label="Sayfa Gezinme" class="mt-3">
        <ul class="pagination justify-content-center">

            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link"
                   href="@Url.Action("Index", new { page = Model.PageNumber - 1, urun = ViewBag.Urun, personel = ViewBag.SelectedPersonel, pageSize = ViewBag.PageSize })">
                    «
                </a>
            </li>

            @{

                int maxPageLinks = 5;
                int start = Model.PageNumber - (maxPageLinks / 2);

                if (start < 1)
                {
                    start = 1;
                }

                int end = start + maxPageLinks - 1;

                if (end > Model.PageCount)
                {
                    end = Model.PageCount;
                    start = Math.Max(1, end - maxPageLinks + 1);
                }
            }

            @for (int i = start; i <= end; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { page = i, urun = ViewBag.Urun, personel = ViewBag.SelectedPersonel, pageSize = ViewBag.PageSize })">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link"
                   href="@Url.Action("Index", new { page = Model.PageNumber + 1, urun = ViewBag.Urun, personel = ViewBag.SelectedPersonel, pageSize = ViewBag.PageSize })">
                    »
                </a>
            </li>

        </ul>
    </nav>

</div>
