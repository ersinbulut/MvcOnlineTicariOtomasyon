@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model Mesajlar

@{
    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<h2>YeniMesaj</h2>


@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Alıcı</label>
        @Html.TextBoxFor(x => x.Alici, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Konu</label>
        @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Mesaj</label>
        @Html.TextAreaFor(x => x.İcerik, new { @class = "form-control", rows = 5 })
    </div>

    <button class="btn btn-primary">
        <i class="fas fa-paper-plane"></i> Gönder
    </button>
}
