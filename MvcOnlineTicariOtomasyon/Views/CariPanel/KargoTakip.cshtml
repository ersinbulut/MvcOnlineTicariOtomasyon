@using PagedList
@model IPagedList<MvcOnlineTicariOtomasyon.Models.Siniflar.KargoDetay>

@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container mt-4">

    <!-- 🔍 ARAMA + PAGE SIZE -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">

            <form method="get" class="row g-3">

                <!-- 🔍 Arama -->
                <div class="col-md-6">
                    <input type="text"
                           name="search"
                           value="@ViewBag.CurrentSearch"
                           class="form-control"
                           placeholder="Kargo Takip No / Alıcı / Personel ara..." />
                </div>

                <!-- Sayfa başına gösterim -->
                <div class="col-md-4">
                    <select name="pageSize" class="form-control">
                        @{
                            int[] sizes = { 5, 10, 20, 50 };
                        }
                        @foreach (var s in sizes)
                        {
                            <option value="@s" @(ViewBag.PageSize == s ? "selected" : "")>
                                @s kayıt
                            </option>
                        }
                    </select>
                </div>

                <!-- Filtrele -->
                <div class="col-md-2">
                    <button class="btn btn-primary w-100">
                        <i class="fa fa-search"></i> Ara
                    </button>
                </div>

            </form>


        </div>
    </div>


    <!-- 📋 Kargo TABLOSU -->
    <div class="card shadow-sm">
        <div class="card-body p-0">

            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Personel</th>
                        <th>Alıcı</th>
                        <th>Takip Kodu</th>
                        <th>Tarih</th>
                        <th>Detaylar</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td>@d.KargoDetayID</td>
                            <td>@d.Personel</td>
                            <td>@d.Alici</td>
                            <td>@d.TakipKodu</td>
                            <td>@d.Tarih</td>
                            <td>
                                <a href="@Url.Action("CariKargoTakip","CariPanel", new { id = d.TakipKodu })"
                                   class="btn btn-sm btn-danger">
                                    <i class="fa fa-street-view"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>


    <!-- 🔢 PAGING -->
    <nav aria-label="Sayfalama" class="mt-3">
        <ul class="pagination justify-content-center">

            <!-- Önceki -->
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link"
                   href="@Url.Action("Index", new { page = Model.PageNumber - 1, search = ViewBag.CurrentSearch, pageSize = ViewBag.PageSize })">
                    &laquo;
                </a>
            </li>

            @{

                int maxPageLinks = 5;
                int start = Model.PageNumber - (maxPageLinks / 2);

                if (start < 1)
                {
                    start = 1;
                }

                int end = start + maxPageLinks - 1;

                if (end > Model.PageCount)
                {
                    end = Model.PageCount;
                    start = Math.Max(1, end - maxPageLinks + 1);
                }
            }

            @for (int i = start; i <= end; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { page = i, search = ViewBag.CurrentSearch, pageSize = ViewBag.PageSize })">
                        @i
                    </a>
                </li>
            }

            <!-- Sonraki -->
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link"
                   href="@Url.Action("Index", new { page = Model.PageNumber + 1, search = ViewBag.CurrentSearch, pageSize = ViewBag.PageSize })">
                    &raquo;
                </a>
            </li>

        </ul>
    </nav>

</div>

