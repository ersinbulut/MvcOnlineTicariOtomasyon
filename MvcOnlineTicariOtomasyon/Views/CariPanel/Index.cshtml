@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2>Mvc Online Ticari Otomasyon Cari Bilgi Paneli</h2>

@using (Html.BeginForm("Index2", "CariPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.CariAd)
        @Html.TextBoxFor(model => model.CariAd, new { @class = "form-control", placeholder = "Adınızı Giriniz" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CariSoyad)
        @Html.TextBoxFor(model => model.CariSoyad, new { @class = "form-control", placeholder = "Soyadınızı Giriniz" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CariSehir)
        @Html.TextBoxFor(model => model.CariSehir, new { @class = "form-control", placeholder = "Soyadınızı Giriniz" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CariSifre)
        @Html.TextBoxFor(model => model.CariSifre, new { @class = "form-control", placeholder = "Mail Adresinizi Giriniz" })
    </div>
    <button type="submit" class="btn btn-primary">Bilgilerimi Güncelle</button>
}