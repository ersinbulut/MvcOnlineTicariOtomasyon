@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<h2 class="mb-4">Sipariş Geçmişim</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card shadow-sm" style="border-radius: 12px;">
                <div class="card-body">
                    <h5 class="card-title" style="font-weight: 600;">
                        @item.Urun.UrunAd
                    </h5>

                    <p class="card-text mb-1">
                        <strong>Fiyat:</strong>
                        @item.Fiyat ₺
                    </p>

                    <p class="card-text mb-3">
                        <strong>Tarih:</strong>
                        @item.Tarih.ToShortDateString()
                    </p>

                    <a class="btn btn-primary btn-sm" style="border-radius: 10px;">
                        Detay Gör
                    </a>
                </div>
            </div>
        </div>
    }
</div>
