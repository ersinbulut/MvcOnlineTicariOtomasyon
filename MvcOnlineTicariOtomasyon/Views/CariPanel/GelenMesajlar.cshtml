@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Mesajlar>

@{
    ViewBag.Title = "Gelen Mesajlar";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1 class="mb-0">📥 Gelen Mesajlar</h1>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/CariPanel">Anasayfa</a></li>
            <li class="breadcrumb-item active">Gelen Mesajlar</li>
        </ol>
    </div>
</section>

<section class="content">
    <div class="row">

        <!-- SOL MENÜ -->
        <div class="col-md-3">
            <a href="/CariPanel/YeniMesaj" class="btn btn-primary btn-block mb-3">
                <i class="fas fa-pen"></i> Yeni Mesaj
            </a>

            <div class="card shadow-sm">
                <div class="card-header">
                    <strong>Klasörler</strong>
                </div>
                <div class="card-body p-0">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                            <a href="/CariPanel/GelenMesajlar" class="nav-link active">
                                <i class="fas fa-inbox mr-1"></i> Gelen Kutusu
                                <span class="badge badge-primary float-right">@ViewBag.d1</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/CariPanel/GonderilenMesajlar" class="nav-link">
                                <i class="far fa-paper-plane mr-1"></i> Gönderilenler
                                <span class="badge badge-secondary float-right">@ViewBag.d2</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/CariPanel/CopKutusu" class="nav-link text-danger">
                                <i class="far fa-trash-alt mr-1"></i> Çöp Kutusu
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- SAĞ TARAF -->
        <div class="col-md-9">
            <div class="card card-outline card-primary shadow-sm">
                <div class="card-header d-flex justify-content-between">
                    <strong>Gelen Kutusu</strong>

                    <div class="input-group input-group-sm" style="width: 220px;">
                        <input type="text" id="mesajAra" class="form-control"
                               placeholder="Mesaj ara...">
                        <div class="input-group-append">
                            <span class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <table class="table table-hover mb-0">
                            <tbody id="mesajTable">
                                @foreach (var item in Model)
                                {
                                    <tr class="@(item.Okundu ? "" : "bg-light border-left border-primary border-4")">
                                        <td style="width:25%">
                                            <strong>@item.Gönderici</strong>
                                        </td>

                                        <td>
                                            <div>
                                                <strong>@item.Konu</strong>
                                                <div class="text-muted small">
                                                    @(item.İcerik.Length > 50
                                                        ? item.İcerik.Substring(0, 50) + "..."
                                                        : item.İcerik)
                                                </div>
                                            </div>
                                        </td>

                                        <td class="text-muted small" style="width:90px">
                                            @item.Tarih.ToString("dd.MM.yyyy")
                                        </td>

                                        <td style="width:130px" class="text-right">
                                            <a href="/CariPanel/MesajDetay/@item.MesajID"
                                               class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/CariPanel/MesajSil/@item.MesajID"
                                               class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Mesaj silinsin mi?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center p-5 text-muted">
                            <i class="far fa-envelope-open fa-3x mb-3"></i>
                            <p class="mb-0">Henüz gelen mesajınız yok</p>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</section>

<script>
    $("#mesajAra").on("keyup", function () {
        var value = $(this).val().toLowerCase();
        $("#mesajTable tr").filter(function () {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
        });
    });
</script>
 