@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model Mesajlar

@{
    ViewBag.Title = "Mesaj Detayı";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@Model.Konu</h3>
    </div>

    <div class="card-body">
        <p><b>Gönderen:</b> @Model.Gönderici</p>
        <p><b>Tarih:</b> @Model.Tarih.ToShortDateString()</p>
        <hr />
        <p>@Model.İcerik</p>
    </div>

    <div class="card-footer">
        <a href="/CariPanel/GelenMesajlar" class="btn btn-secondary">
            Geri Dön
        </a>
    </div>
</div>
