                                                </div>
                                            }
                                            @if (item.Sayi == 2)
                                            {
                                                <div class="progress progress-xs">
                                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                                </div>
                                            }
                                            @if (item.Sayi == 3)
                                            {
                                                <div class="progress progress-xs">
                                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Sayi == 1)
                                            {
                                                <span class="badge bg-danger">@item.Sayi</span>
                                            }
                                            @if (item.Sayi == 2)
                                            {
                                                <span class="badge bg-warning">@item.Sayi</span>
                                            }
                                            @if (item.Sayi == 3)
                                            {
                                                <span class="badge bg-success">@item.Sayi</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
