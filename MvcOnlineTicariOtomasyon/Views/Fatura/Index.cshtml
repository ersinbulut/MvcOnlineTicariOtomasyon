@using MvcOnlineTicariOtomasyon.Models.Siniflar
@using PagedList
@model IPagedList<Faturalar>

@{
    ViewBag.Title = "Fatura Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">📄 Faturalar</h3>
        <a href="/Fatura/FaturaEkle" class="btn btn-primary">
            <i class="fa fa-plus"></i> Yeni Fatura
        </a>
    </div>

    <!-- 🔍 Filtreleme Formu -->
    <form method="get" class="row g-3 mb-3">
        <div class="col-md-4">
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Seri No veya Sıra No ara..." class="form-control" />
        </div>
        <div class="col-md-3">
            <select name="vergiDairesi" class="form-control">
                <option value="">Tüm Vergi Daireleri</option>
                @foreach (var vd in ViewBag.VergiDaireleri as List<string>)
                {
                    <option value="@vd" @(ViewBag.SelectedVergiDairesi == vd ? "selected" : "")>@vd</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <select name="pageSize" class="form-control">
                @{
                    int[] sizes = { 5, 10, 20, 50, 100 };
                }
                @foreach (var s in sizes)
                {
                    <option value="@s" @(ViewBag.PageSize == s ? "selected" : "")>@s kayıt</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <button class="btn btn-primary w-100"><i class="fa fa-search"></i> Uygula</button>
        </div>
    </form>

    <!-- 🧾 Fatura Tablosu -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Seri Sıra No</th>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Toplam</th>
                        <th>Güncelle</th>
                        <th>Detaylar</th>
                        <th>Kalemler</th>
                        <th>Yeni Kalem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FaturaSeriNo @item.FaturaSıraNo</td>
                            <td>@item.Tarih</td>
                            <td>@item.Saat</td>
                            <td>@item.Toplam ₺</td>
                            <td>
                                <a href="/Fatura/FaturaGetir/@item.FaturaID" class="btn btn-warning btn-sm">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                            <td>
                                <a href="/Fatura/FaturaDetay/@item.FaturaID" class="btn btn-danger btn-sm">
                                    <i class="fa fa-info-circle"></i>
                                </a>
                            </td>
                            <td>
                                <button class="btn btn-info btn-sm" onclick="FaturaKalemleriAc(@item.FaturaID)">
                                    <i class="fa fa-list"></i>
                                </button>
                            </td>
                            <td>
                                <button class="btn btn-success btn-sm" onclick="YeniKalemAc(@item.FaturaID)">
                                    <i class="fa fa-plus"></i> Kalem
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- 📌 Pagination -->
    <nav aria-label="Sayfa Gezinme" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1, search = ViewBag.Search, vergiDairesi = ViewBag.SelectedVergiDairesi, pageSize = ViewBag.PageSize })">«</a>
            </li>

            @{

                int maxPageLinks = 5;
                int start = Model.PageNumber - (maxPageLinks / 2);

                if (start < 1)
                {
                    start = 1;
                }

                int end = start + maxPageLinks - 1;

                if (end > Model.PageCount)
                {
                    end = Model.PageCount;
                    start = Math.Max(1, end - maxPageLinks + 1);
                }
            }


            @for (int i = start; i <= end; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, search = ViewBag.Search, vergiDairesi = ViewBag.SelectedVergiDairesi, pageSize = ViewBag.PageSize })">@i</a>
                </li>
            }

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1, search = ViewBag.Search, vergiDairesi = ViewBag.SelectedVergiDairesi, pageSize = ViewBag.PageSize })">»</a>
            </li>
        </ul>
    </nav>

</div>

<!-- 🔹 Fatura Kalemleri Popup -->
<div class="modal fade" id="kalemModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Fatura Kalemleri</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="kalemModalBody"></div>
        </div>
    </div>
</div>

<!-- 🔹 Yeni Kalem Popup -->
<div class="modal fade" id="yeniKalemModal" tabindex="-1">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yeni Kalem Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="yeniKalemModalBody"></div>
        </div>
    </div>
</div>

<script>
    function FaturaKalemleriAc(faturaId) {
        $.get('/Fatura/FaturaKalemPopup/' + faturaId, function (data) {
            $("#kalemModalBody").html(data);
            var kalemModal = new bootstrap.Modal(document.getElementById('kalemModal'));
            kalemModal.show();
        });
    }

    function YeniKalemAc(faturaId) {
        $.get('/Fatura/YeniKalemPopup?faturaId=' + faturaId, function (data) {
            $("#yeniKalemModalBody").html(data);
            var yeniModal = new bootstrap.Modal(document.getElementById('yeniKalemModal'));
            yeniModal.show();
        });
    }
</script>
